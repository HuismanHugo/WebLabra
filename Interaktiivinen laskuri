import React, { useState } from 'react';

function App() {
  // Alustetaan laskurin tila ja funktiot sen päivittämiseksi
  const [laskuri, setLaskuri] = useState(0);

  // Funktio lisää arvoa yhdellä
  const lisaa = () => {
    setLaskuri(laskuri + 1);
  };

  // Funktio vähentää arvoa yhdellä
  const vahenna = () => {
    setLaskuri(laskuri - 1);
  };

  return (
    <div className="App">
      <h1>Yksinkertainen Laskuri</h1>
      <p>Laskurin arvo: {laskuri}</p>
      <button onClick={lisaa}>Lisää</button>
      <button onClick={vahenna}>Vähennä</button>
    </div>
  );
}

export default App;
